{
  "version": "1.0",
  "suiteName": "Login Suite",
  "tests": [
        {
            "id": "login-basic",
            "name": "Basic Login",
            "mode": "single",
            "steps": [
                {"action":"goto", "url": "https://www.saucedemo.com/"},   
                {
                    "action": "assert",
                    "assert": "exists",
                    "selector": "#user-name"
                },             
                {
                    "action": "assert",
                    "assert": "visible",
                    "selector": "#user-name"
                },
                {
                    "action": "assert",
                    "assert": "valueContains",
                    "selector": "#login-button",
                    "value": "Login"
                },
                {
                    "action": "assert",
                    "assert": "enabled",
                    "selector": "#login-button"
                },
                {
                    "action": "assert",
                    "assert": "placeholderEquals",
                    "selector": "#user-name",
                    "value": "Username"
                },
                {
                    "action": "assert",
                    "assert": "placeholderContains",
                    "selector": "#user-name",
                    "value": "User"
                    },
                    {
                    "action": "assert",
                    "assert": "placeholderEquals",
                    "selector": "#user-name",
                    "value": "Username"
                    },
                    {
                    "action": "assert",
                    "assert": "placeholderEquals",
                    "selector": "#password",
                    "value": "Password"
                    }




            ]
        }
    ]
}
