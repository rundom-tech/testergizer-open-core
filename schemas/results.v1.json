{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://testergizer.ai/schemas/results.v1.json",
  "title": "Testergizer Results (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "runId",
    "suite",
    "startedAt",
    "tests",
    "summary",
    "meta"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string"
    },
    "runId": {
      "type": "string"
    },
    "suite": {
      "type": "string"
    },
    "suitePath": {
      "type": "string"
    },
    "suiteVersion": {
      "type": "string"
    },
    "startedAt": {
      "type": "string"
    },
    "endedAt": {
      "type": "string"
    },
    "options": {
      "type": "object",
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "runnerVersion"
      ],
      "properties": {
        "runnerVersion": {
          "type": "string"
        }
      }
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "name",
          "status",
          "steps"
        ],
        "properties": {
          "id": {
            "type": [
              "string",
              "null"
            ]
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "durationMs": {
            "type": "number"
          },
          "error": {
            "type": [
              "string",
              "null"
            ]
          },
          "screenshot": {
            "type": "string"
          },
          "consoleLogs": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "type",
                "text"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                }
              }
            }
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true,
              "required": [
                "id",
                "action",
                "status",
                "attempts"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "action": {
                  "type": "string"
                },
                "status": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "durationMs": {
                  "type": "number"
                },
                "attempts": {
                  "type": "number"
                },
                "flaky": {
                  "type": "boolean"
                },
                "error": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "attemptErrors": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                      "reason",
                      "message"
                    ],
                    "properties": {
                      "reason": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total",
        "passed",
        "failed"
      ],
      "properties": {
        "total": {
          "type": "number"
        },
        "passed": {
          "type": "number"
        },
        "failed": {
          "type": "number"
        }
      }
    }
  }
}
