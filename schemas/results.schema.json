{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://testergizer.dev/schemas/results.schema.json",
  "title": "Testergizer Open Core Results Schema",
  "description": "Execution evidence emitted by Testergizer Open Core. No analysis, no interpretation.",
  "type": "object",
  "required": ["schemaVersion", "suiteId", "tests"],
  "additionalProperties": false,

  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "v1",
      "description": "Schema version of this artifact"
    },

    "suiteId": {
      "type": "string",
      "description": "Logical identifier of the executed test suite"
    },

    "runId": {
      "type": "string",
      "description": "Unique identifier of this execution run"
    },

    "startedAt": {
      "type": "string",
      "format": "date-time"
    },

    "endedAt": {
      "type": "string",
      "format": "date-time"
    },

    "meta": {
      "type": "object",
      "description": "Optional execution metadata",
      "additionalProperties": true
    },

    "tests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/test"
      }
    }
  },

  "definitions": {
    "test": {
      "type": "object",
      "required": ["id", "status", "steps"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "Stable test identifier"
        },

        "status": {
          "type": "string",
          "enum": ["passed", "failed", "skipped"]
        },

        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      }
    },

    "step": {
      "type": "object",
      "required": ["id", "action", "status"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "Stable step identifier"
        },

        "action": {
          "type": "string",
          "description": "Normalized execution action",
          "enum": [
            "NAVIGATE",
            "CLICK",
            "TYPE",
            "SELECT",
            "WAIT",
            "ASSERT"
          ]
        },

        "status": {
          "type": "string",
          "enum": ["passed", "failed", "skipped"]
        },

        "attempts": {
          "type": "integer",
          "minimum": 1
        },

        "attemptErrors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
