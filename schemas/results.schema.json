{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["schemaVersion", "suiteId", "tests"],
  "properties": {
    "schemaVersion": { "const": "v1" },
    "suiteId": { "type": "string" },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status", "steps"],
        "properties": {
          "id": { "type": "string" },
          "status": { "type": "string" },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "action", "status"],
              "properties": {
                "id": { "type": "string" },
                "action": { "type": "string" },
                "status": { "type": "string" },
                "attempts": { "type": "number" },
                "attemptErrors": { "type": "array" }
              }
            }
          }
        }
      }
    }
  }
}
