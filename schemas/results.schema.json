{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://testergizer.dev/schemas/results.schema.json",
  "type": "object",
  "required": ["schemaVersion", "runId", "startedAt", "endedAt", "tests", "summary"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "const": "v1" },
    "runId": { "type": "string" },
    "startedAt": { "type": "string", "format": "date-time" },
    "endedAt": { "type": "string", "format": "date-time" },
    "tests": {
      "type": "array",
      "items": { "$ref": "#/$defs/testResult" }
    },
    "summary": { "$ref": "#/$defs/runSummary" }
  },
  "$defs": {
    "testResult": {
      "type": "object",
      "required": ["id", "testDomain", "executionMode", "status", "startedAt", "endedAt", "steps"],
      "properties": {
        "id": { "type": "string" },
        "testDomain": { "type": "string", "enum": ["ui", "api", "system"] },
        "executionMode": { "type": "string", "enum": ["stub", "verify", "update", "execute"] },
        "status": { "type": "string", "enum": ["passed", "failed", "skipped"] },
        "startedAt": { "type": "string", "format": "date-time" },
        "endedAt": { "type": "string", "format": "date-time" },
        "steps": {
          "type": "array",
          "items": { "$ref": "#/$defs/stepResult" }
        }
      }
    },
    "stepResult": {
      "type": "object",
      "required": ["id", "action", "status", "attempts", "errors", "startedAt", "endedAt", "durationMs"],
      "properties": {
        "id": { "type": "string" },
        "action": { "type": "string" },
        "status": { "type": "string", "enum": ["passed", "failed", "skipped"] },
        "attempts": { "type": "integer" },
        "errors": { "type": "array" },
        "startedAt": { "type": "string", "format": "date-time" },
        "endedAt": { "type": "string", "format": "date-time" },
        "durationMs": { "type": "integer" }
      }
    },
    "runSummary": {
      "type": "object",
      "required": ["total", "passed", "failed", "skipped"],
      "properties": {
        "total": { "type": "integer" },
        "passed": { "type": "integer" },
        "failed": { "type": "integer" },
        "skipped": { "type": "integer" }
      }
    }
  }
}
